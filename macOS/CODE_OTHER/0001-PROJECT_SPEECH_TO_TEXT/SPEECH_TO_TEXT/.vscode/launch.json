{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ Program with Whisper",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/output", // ไฟล์เอาต์พุตที่ตั้งไว้ใน tasks.json
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb", // หรือเปลี่ยนเป็น gdb ถ้าคุณใช้ gdb
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build", // เชื่อมกับ task ที่ชื่อ "build" ใน tasks.json
      "miDebuggerPath": "/usr/bin/gdb", // ถ้าใช้ gdb ให้เปลี่ยนเป็น path ของ gdb
      "console": "integratedTerminal"
    }
  ]
}
