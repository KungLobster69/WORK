   "source": [
    "def countdown(n):\n",
    "    # ส่วนที่ 1: Base Case\n",
    "    if n == 0:\n",
    "        print(\"Blast off!\")\n",
    "        return  # จบการทำงานที่นี่ ไม่เรียกต่อแล้ว\n",
    "\n",
    "    # ส่วนที่ 2: Recursive Step\n",
    "    print(n)\n",
    "    countdown(n - 1)  # เรียกตัวเอง แต่ลดค่า n ลง 1"
   ]
  },
